services:
  - type: web
    name: advent-calendar  # ← имя сервиса (можете изменить)
    runtime: python
    env: python
    region: oregon
    plan: free              # бесплатный тариф
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn app:app
    envVars:
      - key: PYTHON_VERSION
        value: 3.11
